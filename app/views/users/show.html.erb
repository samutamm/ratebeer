<p id="notice"><%= notice %></p>

<h1><%= @user.username %></h1>

<p>has made
  <%= @user.ratings.count %>
  ratings with average of
  <%= @user.average_rating %>
</p>

<p>
  <% if @user.beer_clubs.empty? %>
      <%= @user.username %> has not yet joined in any beer clubs.
  <% else %>
    <p>Beer Clubs:
      <% @user.beer_clubs.each do |club| %>
          <%= link_to club.name, club %>
      <% end %>
    </p>
<% end %>
</p>

<% if not @user.ratings.empty? %>
    <table>
      <thead>
      <tr>
        <th>Beer</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @user.ratings.each do |rating| %>
          <tr>
            <td><%= rating.beer.name %></td>
            <td><%= rating.score %></td>
            <% if @user == current_user %>
                <td><%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', user_path(@user), method: :delete if @user == current_user %>
<%= link_to 'Back', users_path %>
