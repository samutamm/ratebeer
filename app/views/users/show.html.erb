<p id="notice"><%= notice %></p>

<table>
  <thead>
  <tr>
    <th>Username</th>
    <th colspan="3"></th>
    <%= @user.username %>
    has made
    <%= @user.ratings.count %>
    ratings with average of
    <%= @user.average_rating %>
  </tr>
  </thead>

  <tbody>
  <% @user.ratings.each do |rating| %>
      <tr>
        <td><%= rating.to_s %></td>
        <td><%= link_to 'Delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
