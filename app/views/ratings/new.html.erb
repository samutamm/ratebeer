<h1>Create new rating</h1>

<% if @rating.errors.messages.any? %>
    <%= @rating.errors.messages  %>
<% end %>

<%= form_for(@rating) do |f| %>
    <%= f.select :beer_id, options_from_collection_for_select(@beers, :id, :name) %>
    score: <%= f.number_field :score %>

    <%= f.submit %>
<% end %>