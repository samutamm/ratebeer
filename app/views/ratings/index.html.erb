<h2>Ratings</h2>

<div class="col-xs-3">
  <h3><span class="glyphicon glyphicon-star" aria-hidden="true"></span>Best breweries</h3>
  <%= render 'list', elements: @top_breweries %>
</div>
<div class="col-xs-3">
  <h3><span class="glyphicon glyphicon-star" aria-hidden="true"></span>Best beers</h3>
  <%= render 'list', elements: @top_beers %>
</div>
<div class="col-xs-3">
  <h3><span class="glyphicon glyphicon-star" aria-hidden="true"></span>Best styles</h3>
  <%= render 'list', elements: @top_styles %>
</div>

<div class="col-xs-9">
  <h3><span class="glyphicon glyphicon-star" aria-hidden="true"></span>Most active raters: </h3>
  <table class="table table-hover">
    <thead>
    <tr>
      <th></th>
      <th>Favorite beer</th>
      <th>Preferred style</th>
      <th>Favorite brewery</th>
      <th>Ratings</th>
    </tr>
    </thead>
    <tbody>
    <% @top_raters.each do |rater| %>
        <tr>
          <td><%= link_to rater, rater %></td>
          <td><%= rater.favorite_beer %></td>
          <td><%= rater.favorite_style %></td>
          <td><%= rater.favorite_brewery %></td>
          <td><%= rater.ratings.count %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <h3><span class="glyphicon glyphicon-star" aria-hidden="true"></span>Recent ratings: </h3>
    <ul>
      <% @recent.each do |rating| %>
        <li><%= rating.beer %> <%= rating.score %> <%= link_to rating.user, rating.user %></li>
      <% end %>
    </ul>
  <br>
  <%= link_to('New Rating', new_rating_path, class:'btn btn-primary') if current_user %>
</div>
