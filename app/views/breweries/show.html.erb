<% cache @brewery do %>

    <h2><%= @brewery.name %>
      <% if not @brewery.active %>
          <span class="label label-info">retired</span>
      <% end %>
    </h2>
    <%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
    <p>
    <h3><i>Established in <%= @brewery.year %></i></h3>
    </p>

    <p>Number of beers: <%= @brewery.beers.count %></p>

    <p>
      <% @brewery.beers.each do |beer| %>
          <%= link_to beer.name, beer %>
      <% end %>
    </p>

    <% if @brewery.ratings.empty? %>
        Breweries beers has not yet been rated!
    <% else %>
        <p>Has <%= pluralize(@brewery.ratings.count, 'rating','ratings')%>
          , average <%= round(@brewery.average_rating) %></p>
    <% end %>
    <br>

<% end %>

<%= edit_and_destroy_buttons(@brewery) %>
