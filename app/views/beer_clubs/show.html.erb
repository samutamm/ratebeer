<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>
<p>
<% if @beer_club.members.empty? %>
    The club has not yet any members.
<% else %>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Members</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <% @beer_club.members.each do |member| %>
          <tr>
            <td><%= member.username %></td>
            <td><%= link_to 'Show', member, class:'btn btn-info' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
</p>

<% if current_user %>
    <% if @beer_club.members.include?(current_user) %>
        <%= link_to 'end the membership', @membership, method: :delete, class:'btn btn-danger' %>
    <% else %>
        <%= form_for(@membership) do |f| %>
            <%= f.hidden_field :beer_club_id %>
            <%= f.submit value:"join the club", class:'btn btn-success' %>
        <% end %>
    <% end %>
    <%= edit_and_destroy_buttons(@beer_club) %>
<% end %>
<%= link_to 'Back', beer_clubs_path, class: 'btn btn-default' %>
